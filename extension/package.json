{
  "version": "0.0.2",
  "name": "keyboard-navigation",
  "description": "An opinionated keyboard grammar extension that focuses on navigating the workbench UI",
  "displayName": "Keyboard Navigation",
  "publisher": "josephtingiris",
  "repository": {
    "type": "git",
    "url": "https://github.com/josephtingiris/vscode-keyboard-navigation"
  },
  "icon": "vscode-keyboard-navigation.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Keymaps", "Themes", "Other"],
  "keywords": ["keyboard", "keboard", "keybindings", "arrows", "emacs", "navigation"],
  "main": "./main.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:keyboardNavigation.resetLayout",
    "onCommand:keyboardNavigation.applyVisualHighlights",
    "onCommand:keyboardNavigation.toggleVisualHighlights"
  ],
  "contributes": {
    "commands": [
      {
        "command": "keyboardNavigation.resetLayout",
        "title": "Reset Workbench Layout",
        "category": "Keyboard Navigation"
      },
      {
        "command": "keyboardNavigation.applyVisualHighlights",
        "title": "Apply Visual Keyboard Navigation Highlights",
        "category": "Keyboard Navigation"
      },
      {
        "command": "keyboardNavigation.toggleVisualHighlights",
        "title": "Toggle Visual Keyboard Navigation Highlights",
        "category": "Keyboard Navigation"
      }
    ],
    "keybindings": [
      {
        "key": "alt+n escape",
        "command": "keyboardNavigation.resetLayout",
        "when": "config.keyboardNavigation.enabled"
      },
      {
        "key": "alt+n h",
        "command": "keyboardNavigation.toggleVisualHighlights",
        "when": "config.keyboardNavigation.enabled"
      },
      {
        "key": "alt+n v",
        "command": "keyboardNavigation.applyVisualHighlights",
        "when": "config.keyboardNavigation.enabled"
      }
    ],
    "configuration": {
      "title": "Keyboard Navigation Settings",
      "properties": {
        "keyboardNavigation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Keyboard Navigation extension."
        },
        "keyboardNavigation.keys.arrows": {
          "type": "boolean",
          "default": true,
          "description": "Use arrow keys for navigation."
        },
        "keyboardNavigation.keys.letterGroup": {
          "type": "string",
          "enum": ["emacs", "kbm", "vi", "none"],
          "default": "vi",
          "description": "Select exactly one letter-key navigation group. Choose 'none' to disable letter-key groups. Arrows are controlled separately by keyboardNavigation.keys.arrows."
        },
        "keyboardNavigation.highlights.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable highlights to aid visually tracking the focused components (useful for debugging, demonstrations, and code speedruns)."
        },
        "keyboardNavigation.highlights.color": {
          "type": "string",
          "default": "#FF0000",
          "pattern": "^#([A-Fa-f0-9]{6})$",
          "errorMessage": "Enter a hex color like #FF0000",
          "description": "Preferred color for visual highlights, e.g. borders, cursors, et al; enter a hex color value."
        },
        "keyboardNavigation.preferences.orientation": {
          "type": "string",
          "enum": ["default", "left", "right"],
          "default": "default",
          "description": "Preferred orientation hint ('default' will use the VS Code defaults)."
        },
        "keyboardNavigation.terminal.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable terminal window & pane navigation."
        }
      }
    }
  }
}
